graph TD;
    A((Start open(row, col))) --> B{"Is site(row, col) already open?"};
    B -- "No (Site is blocked)" --> C["Set site to open (grid[row-1][col-1] = true)"];
    B -- "Yes (Site is already open)" --> Z((End));
    C --> D["Increment openSites count"];
    D --> E{"Is the site in the top row (row == 1)?"};
    E -- "No" --> G;
    E -- "Yes" --> F["Union site with topVirtualSite"];
    F --> G{"Is the site in the bottom row (row == n)?"};
    G -- "No" --> I;
    G -- "Yes" --> H["Union site with bottomVirtualSite"];
    H --> I{"Check adjacent neighbors (up, down, left, right)"};
    I -- "Neighbor exists and is open" --> J["Union current site with neighbor"];
    J --> I;
    I -- "All neighbors checked" --> Z;
